commands:
  01_install_geos:
    command: |
      sudo wget "https://gdal-bucket-mnky-chat.s3.amazonaws.com/geos-3.9.2.tar.gz"
      sudo mkdir -p /usr/local/geos
      sudo tar -xvf geos-3.9.2.tar.gz -C /usr/local/geos
      sudo rm -f geos-3.9.2.tar.gz
    test: "[ ! -d /usr/local/geos ]"

  02_install_gdal:
    command: |
      sudo wget "https://gdal-bucket-mnky-chat/gdal-3.2.0.tar.gz"
      sudo mkdir -p /usr/local/gdal
      sudo tar -xvf gdal-3.2.0.tar.gz -C /usr/local/gdal
      sudo rm -f gdal-3.2.0.tar.gz
    test: "[ ! -d /usr/local/gdal ]"



option_settings:
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/opt/python/current/app"
    PATH: /usr/local/gdal/bin:$PATH
    LD_LIBRARY_PATH: /usr/local/proj4/lib:/usr/local/geos/lib:/usr/local/gdal/lib:$LD_LIBRARY_PATH
    GDAL_LIBRARY_PATH: /usr/local/gdal/lib/libgdal.so